{
    "compilerOptions": {
      "jsx": "react-jsx",
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
  